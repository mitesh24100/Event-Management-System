<%# The Main file for the Users Page %>

<p id="notice"><%= notice %></p>

<h1>ATTENDEES</h1>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Address</th>
    <th>Phone Number</th>
    <th>Credit card</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>

      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.address %></td>
      <td><%= user.phone_number %></td>
      <td><%= user.credit_card_number %></td>
      <td><%= link_to 'Show', user %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <% if !user.admin? %>
        <td><%= button_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <%end%>
    </tr>
  <% end %>
  </tbody>
</table>
<br/>
