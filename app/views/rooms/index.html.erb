<%# The Main file for the Rooms Page %>

<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<br/>

<table>
  <thead>
  <tr>
    <th>Location</th>
    <th>Capacity</th>
  </tr>
  </thead>

  <tbody>
  <% @rooms.each do |room| %>
    <tr>
      <td><%= room.location %></td>
      <td><%= room.capacity %></td>
      <td><%= link_to 'Show', room %></td>
      <% if current_user.admin? %>
        <td><%= link_to 'Edit', edit_room_path(room)  %></td>
        <td><%= button_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <%end%>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<% if current_user.admin? %>
  <%= link_to "New room", new_room_path %>
<%end%>
<%= link_to 'Back', root_path %>


